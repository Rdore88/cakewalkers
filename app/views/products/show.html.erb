<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <% if @product.picture %>
    <strong>Picture:</strong>
    <%= image_tag @product.picture, size: "144" %>
  <% end %>
</p>

<p>
  <strong>Unit price:</strong>
  <%= number_to_currency @product.unit_price %>
</p>

<%= link_to 'Back', products_path %>
<p><%= link_to "Add to cart", new_line_item_path(product: @product) %></p>
